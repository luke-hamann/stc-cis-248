digraph data_flow_diagram {
    node [ shape = circle ]
    
    "..." [ shape = none ]
    
    "..." -> Router -> "..."

    subgraph controllers {
        rank = same
        
        "Color\ncontroller"
        "Shift context\nnotes controller"
    }
    
    Router -> {
        "Color\ncontroller"
        "Shift context\nnotes controller"
    } -> Router
    
    subgraph repositories {
        rank = same
        
        "Color\nrepository"
        "Shift context\nrepository"
        "Shift context\nnotes repository"
    }
    
    "Color\ncontroller" -> {
        "Color\nrepository"
    } -> "Color\ncontroller"
    
    "Shift context\nnotes controller" -> {
        "Color\nrepository"
        "Shift context\nrepository"
        "Shift context\nnotes repository"
    } -> "Shift context\nnotes controller"
    
    Database [ shape = folder ]
    
    Database -> {
        "Color\nrepository"
        "Shift context\nrepository"
        "Shift context\nnotes repository"
    } -> Database
}
